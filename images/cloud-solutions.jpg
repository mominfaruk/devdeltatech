<svg width="400" height="300" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="cloudGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#60a5fa;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="awsGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff9900;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ff6600;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="400" height="300" fill="#f8f9fa"/>

  <!-- Main cloud infrastructure -->
  <ellipse cx="200" cy="80" rx="60" ry="30" fill="url(#cloudGradient)" opacity="0.9"/>
  <ellipse cx="170" cy="65" rx="35" ry="18" fill="url(#cloudGradient)" opacity="0.9"/>
  <ellipse cx="230" cy="65" rx="40" ry="22" fill="url(#cloudGradient)" opacity="0.9"/>

  <!-- Cloud services text -->
  <text x="200" y="85" text-anchor="middle" fill="white" font-family="Arial" font-size="14" font-weight="bold">CLOUD</text>

  <!-- AWS logo area -->
  <rect x="30" y="40" width="50" height="25" rx="12" fill="url(#awsGradient)" opacity="0.9"/>
  <text x="55" y="55" text-anchor="middle" fill="white" font-family="Arial" font-size="10" font-weight="bold">AWS</text>

  <!-- Google Cloud -->
  <rect x="320" y="50" width="50" height="25" rx="12" fill="#4285f4" opacity="0.9"/>
  <text x="345" y="65" text-anchor="middle" fill="white" font-family="Arial" font-size="9" font-weight="bold">Google</text>

  <!-- Azure -->
  <rect x="30" y="200" width="45" height="25" rx="12" fill="#0078d4" opacity="0.9"/>
  <text x="52" y="215" text-anchor="middle" fill="white" font-family="Arial" font-size="9" font-weight="bold">Azure</text>

  <!-- Microservices containers -->
  <rect x="120" y="140" width="40" height="30" rx="6" fill="#10b981" opacity="0.8"/>
  <text x="140" y="158" text-anchor="middle" fill="white" font-family="Arial" font-size="8">API</text>

  <rect x="180" y="140" width="40" height="30" rx="6" fill="#f59e0b" opacity="0.8"/>
  <text x="200" y="158" text-anchor="middle" fill="white" font-family="Arial" font-size="8">AUTH</text>

  <rect x="240" y="140" width="40" height="30" rx="6" fill="#ef4444" opacity="0.8"/>
  <text x="260" y="158" text-anchor="middle" fill="white" font-family="Arial" font-size="8">DB</text>

  <!-- Docker containers -->
  <rect x="100" y="190" width="35" height="25" rx="4" fill="#2496ed" opacity="0.8"/>
  <text x="117" y="205" text-anchor="middle" fill="white" font-family="Arial" font-size="7">Docker</text>

  <rect x="150" y="190" width="35" height="25" rx="4" fill="#326ce5" opacity="0.8"/>
  <text x="167" y="205" text-anchor="middle" fill="white" font-family="Arial" font-size="7">K8s</text>

  <rect x="200" y="190" width="35" height="25" rx="4" fill="#ff6b6b" opacity="0.8"/>
  <text x="217" y="205" text-anchor="middle" fill="white" font-family="Arial" font-size="7">Redis</text>

  <rect x="250" y="190" width="35" height="25" rx="4" fill="#4caf50" opacity="0.8"/>
  <text x="267" y="205" text-anchor="middle" fill="white" font-family="Arial" font-size="7">Node</text>

  <!-- Load balancer -->
  <rect x="170" y="110" width="60" height="20" rx="10" fill="#6366f1" opacity="0.8"/>
  <text x="200" y="123" text-anchor="middle" fill="white" font-family="Arial" font-size="9">Load Balancer</text>

  <!-- Database cluster -->
  <ellipse cx="320" cy="160" rx="25" ry="8" fill="#374151"/>
  <rect x="295" y="152" width="50" height="16" fill="#374151"/>
  <ellipse cx="320" cy="152" rx="25" ry="8" fill="#4b5563"/>
  <ellipse cx="320" cy="145" rx="25" ry="8" fill="#6b7280"/>
  <text x="320" y="180" text-anchor="middle" fill="#374151" font-family="Arial" font-size="8">Database</text>

  <!-- CDN nodes -->
  <circle cx="80" cy="120" r="12" fill="#8b5cf6" opacity="0.8"/>
  <text x="80" y="125" text-anchor="middle" fill="white" font-family="Arial" font-size="7">CDN</text>

  <circle cx="350" cy="120" r="12" fill="#8b5cf6" opacity="0.8"/>
  <text x="350" y="125" text-anchor="middle" fill="white" font-family="Arial" font-size="7">CDN</text>

  <!-- Connection lines -->
  <path d="M80 52 Q120 30 170 65" stroke="url(#awsGradient)" stroke-width="2" fill="none" opacity="0.6" stroke-dasharray="3,3"/>
  <path d="M320 65 Q280 30 230 65" stroke="#4285f4" stroke-width="2" fill="none" opacity="0.6" stroke-dasharray="3,3"/>
  <path d="M200 110 L200 140" stroke="url(#cloudGradient)" stroke-width="3" fill="none"/>
  <path d="M140 170 L140 190" stroke="#10b981" stroke-width="2" fill="none"/>
  <path d="M200 170 L200 190" stroke="#f59e0b" stroke-width="2" fill="none"/>
  <path d="M260 170 L260 190" stroke="#ef4444" stroke-width="2" fill="none"/>

  <!-- Data flow arrows -->
  <path d="M92 120 L108 140" stroke="#8b5cf6" stroke-width="2" fill="none" marker-end="url(#arrowhead)"/>
  <path d="M338 120 L322 140" stroke="#8b5cf6" stroke-width="2" fill="none" marker-end="url(#arrowhead)"/>

  <!-- Security indicators -->
  <rect x="180" y="250" width="40" height="20" rx="10" fill="#059669" opacity="0.8"/>
  <text x="200" y="263" text-anchor="middle" fill="white" font-family="Arial" font-size="8">SSL/TLS</text>

  <!-- Monitoring -->
  <circle cx="350" cy="200" r="15" fill="#f97316" opacity="0.8"/>
  <text x="350" y="205" text-anchor="middle" fill="white" font-family="Arial" font-size="7">Monitor</text>

  <!-- Backup -->
  <rect x="300" y="230" width="30" height="20" rx="5" fill="#6b7280" opacity="0.8"/>
  <text x="315" y="243" text-anchor="middle" fill="white" font-family="Arial" font-size="7">Backup</text>
</svg>

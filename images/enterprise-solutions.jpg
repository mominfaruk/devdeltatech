<svg width="400" height="300" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="enterpriseGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="400" height="300" fill="#f8f9fa"/>

  <!-- Central server/database -->
  <rect x="170" y="120" width="60" height="80" rx="8" fill="#2d3748" stroke="#4a5568" stroke-width="2"/>
  <rect x="175" y="125" width="50" height="70" rx="4" fill="#1a202c"/>

  <!-- Server indicators -->
  <circle cx="185" cy="135" r="3" fill="#10b981"/>
  <circle cx="195" cy="135" r="3" fill="#10b981"/>
  <circle cx="205" cy="135" r="3" fill="#f59e0b"/>
  <circle cx="215" cy="135" r="3" fill="#10b981"/>

  <!-- Data visualization -->
  <rect x="180" y="145" width="40" height="3" rx="1" fill="url(#enterpriseGradient)"/>
  <rect x="180" y="152" width="35" height="3" rx="1" fill="url(#enterpriseGradient)" opacity="0.7"/>
  <rect x="180" y="159" width="45" height="3" rx="1" fill="url(#enterpriseGradient)" opacity="0.5"/>
  <rect x="180" y="166" width="30" height="3" rx="1" fill="url(#enterpriseGradient)" opacity="0.8"/>

  <!-- Database symbol -->
  <ellipse cx="200" cy="180" rx="15" ry="5" fill="#667eea"/>
  <rect x="185" y="175" width="30" height="10" fill="#667eea"/>
  <ellipse cx="200" cy="175" rx="15" ry="5" fill="#764ba2"/>

  <!-- ERP Module -->
  <rect x="60" y="60" width="80" height="60" rx="8" fill="url(#enterpriseGradient)" opacity="0.9"/>
  <text x="100" y="85" text-anchor="middle" fill="white" font-family="Arial" font-size="12" font-weight="bold">ERP</text>
  <text x="100" y="100" text-anchor="middle" fill="white" font-family="Arial" font-size="8">Enterprise Resource</text>
  <text x="100" y="110" text-anchor="middle" fill="white" font-family="Arial" font-size="8">Planning</text>

  <!-- CRM Module -->
  <rect x="260" y="60" width="80" height="60" rx="8" fill="#10b981" opacity="0.9"/>
  <text x="300" y="85" text-anchor="middle" fill="white" font-family="Arial" font-size="12" font-weight="bold">CRM</text>
  <text x="300" y="100" text-anchor="middle" fill="white" font-family="Arial" font-size="8">Customer Relationship</text>
  <text x="300" y="110" text-anchor="middle" fill="white" font-family="Arial" font-size="8">Management</text>

  <!-- BI Module -->
  <rect x="60" y="180" width="80" height="60" rx="8" fill="#f59e0b" opacity="0.9"/>
  <text x="100" y="205" text-anchor="middle" fill="white" font-family="Arial" font-size="12" font-weight="bold">BI</text>
  <text x="100" y="220" text-anchor="middle" fill="white" font-family="Arial" font-size="8">Business</text>
  <text x="100" y="230" text-anchor="middle" fill="white" font-family="Arial" font-size="8">Intelligence</text>

  <!-- Workflow Module -->
  <rect x="260" y="180" width="80" height="60" rx="8" fill="#ef4444" opacity="0.9"/>
  <text x="300" y="205" text-anchor="middle" fill="white" font-family="Arial" font-size="10" font-weight="bold">WORKFLOW</text>
  <text x="300" y="220" text-anchor="middle" fill="white" font-family="Arial" font-size="8">Process</text>
  <text x="300" y="230" text-anchor="middle" fill="white" font-family="Arial" font-size="8">Automation</text>

  <!-- Connection lines -->
  <path d="M140 90 L170 140" stroke="url(#enterpriseGradient)" stroke-width="3" fill="none"/>
  <path d="M260 90 L230 140" stroke="#10b981" stroke-width="3" fill="none"/>
  <path d="M140 210 L170 180" stroke="#f59e0b" stroke-width="3" fill="none"/>
  <path d="M260 210 L230 180" stroke="#ef4444" stroke-width="3" fill="none"/>

  <!-- Data flow indicators -->
  <circle cx="155" cy="115" r="4" fill="url(#enterpriseGradient)"/>
  <circle cx="245" cy="115" r="4" fill="#10b981"/>
  <circle cx="155" cy="195" r="4" fill="#f59e0b"/>
  <circle cx="245" cy="195" r="4" fill="#ef4444"/>

  <!-- Security shield -->
  <path d="M200 40 L210 45 L210 55 Q210 65 200 70 Q190 65 190 55 L190 45 Z" fill="#6366f1" opacity="0.8"/>
  <path d="M195 50 L198 53 L205 46" stroke="white" stroke-width="2" fill="none" stroke-linecap="round"/>

  <!-- Cloud connection -->
  <ellipse cx="200" cy="25" rx="20" ry="8" fill="#60a5fa" opacity="0.7"/>
  <ellipse cx="185" cy="20" rx="12" ry="6" fill="#60a5fa" opacity="0.7"/>
  <ellipse cx="215" cy="20" rx="15" ry="7" fill="#60a5fa" opacity="0.7"/>

  <!-- Users -->
  <circle cx="30" cy="150" r="8" fill="#6b7280"/>
  <rect x="22" y="160" width="16" height="20" rx="8" fill="#6b7280"/>

  <circle cx="370" cy="150" r="8" fill="#6b7280"/>
  <rect x="362" y="160" width="16" height="20" rx="8" fill="#6b7280"/>

  <!-- User connection lines -->
  <path d="M46 160 Q80 140 140 150" stroke="#6b7280" stroke-width="2" fill="none" stroke-dasharray="5,5" opacity="0.6"/>
  <path d="M354 160 Q320 140 260 150" stroke="#6b7280" stroke-width="2" fill="none" stroke-dasharray="5,5" opacity="0.6"/>
</svg>

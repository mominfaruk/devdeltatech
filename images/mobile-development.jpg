<svg width="400" height="300" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="mobileGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#764ba2;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#667eea;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="400" height="300" fill="#f8f9fa"/>

  <!-- Main phone -->
  <rect x="160" y="40" width="80" height="160" rx="20" fill="#2d3748" stroke="#4a5568" stroke-width="2"/>
  <rect x="170" y="55" width="60" height="130" rx="12" fill="#1a202c"/>

  <!-- Status bar -->
  <rect x="175" y="60" width="50" height="8" rx="4" fill="#4a5568"/>
  <circle cx="220" cy="64" r="2" fill="#10b981"/>
  <rect x="210" y="62" width="6" height="4" rx="1" fill="#6b7280"/>

  <!-- App interface -->
  <rect x="175" y="75" width="50" height="25" rx="4" fill="url(#mobileGradient)"/>
  <text x="200" y="90" text-anchor="middle" fill="white" font-family="Arial" font-size="8" font-weight="bold">DevDelta</text>

  <!-- App content -->
  <rect x="175" y="105" width="50" height="3" rx="1" fill="#9ca3af"/>
  <rect x="175" y="112" width="35" height="3" rx="1" fill="#9ca3af"/>
  <rect x="175" y="119" width="45" height="3" rx="1" fill="#9ca3af"/>

  <!-- Buttons -->
  <rect x="175" y="130" width="20" height="12" rx="6" fill="#10b981"/>
  <rect x="200" y="130" width="25" height="12" rx="6" fill="#ef4444"/>

  <!-- Navigation -->
  <rect x="175" y="150" width="50" height="20" rx="4" fill="#374151"/>
  <circle cx="185" cy="160" r="3" fill="#667eea"/>
  <circle cx="200" cy="160" r="3" fill="#9ca3af"/>
  <circle cx="215" cy="160" r="3" fill="#9ca3af"/>

  <!-- Home indicator -->
  <rect x="190" y="175" width="20" height="3" rx="2" fill="#6b7280"/>

  <!-- Secondary phone (smaller) -->
  <rect x="280" y="80" width="60" height="120" rx="15" fill="#374151" stroke="#4a5568" stroke-width="1"/>
  <rect x="287" y="90" width="46" height="100" rx="8" fill="#1f2937"/>

  <!-- Secondary phone content -->
  <rect x="292" y="95" width="36" height="15" rx="2" fill="url(#mobileGradient)" opacity="0.8"/>
  <rect x="292" y="115" width="36" height="2" rx="1" fill="#6b7280"/>
  <rect x="292" y="120" width="25" height="2" rx="1" fill="#6b7280"/>
  <rect x="292" y="125" width="30" height="2" rx="1" fill="#6b7280"/>

  <!-- Third phone (tablet view) -->
  <rect x="60" y="120" width="70" height="100" rx="12" fill="#1f2937" stroke="#374151" stroke-width="1"/>
  <rect x="67" y="127" width="56" height="86" rx="6" fill="#111827"/>

  <!-- Tablet content -->
  <rect x="72" y="132" width="46" height="12" rx="2" fill="url(#mobileGradient)" opacity="0.7"/>
  <rect x="72" y="148" width="46" height="2" rx="1" fill="#4b5563"/>
  <rect x="72" y="153" width="35" height="2" rx="1" fill="#4b5563"/>
  <rect x="72" y="158" width="40" height="2" rx="1" fill="#4b5563"/>

  <!-- Technology badges -->
  <rect x="30" y="50" width="45" height="20" rx="10" fill="#61dafb" opacity="0.9"/>
  <text x="52" y="62" text-anchor="middle" fill="white" font-family="Arial" font-size="8" font-weight="bold">React Native</text>

  <rect x="320" y="180" width="35" height="18" rx="9" fill="#02569b" opacity="0.9"/>
  <text x="337" y="191" text-anchor="middle" fill="white" font-family="Arial" font-size="7" font-weight="bold">Flutter</text>

  <rect x="30" y="240" width="30" height="18" rx="9" fill="#a4c639" opacity="0.9"/>
  <text x="45" y="251" text-anchor="middle" fill="white" font-family="Arial" font-size="7" font-weight="bold">Android</text>

  <rect x="340" y="40" width="25" height="18" rx="9" fill="#007aff" opacity="0.9"/>
  <text x="352" y="51" text-anchor="middle" fill="white" font-family="Arial" font-size="7" font-weight="bold">iOS</text>

  <!-- Connection lines -->
  <path d="M75 60 Q120 40 160 60" stroke="#61dafb" stroke-width="2" fill="none" opacity="0.5" stroke-dasharray="3,3"/>
  <path d="M240 120 Q260 100 280 120" stroke="url(#mobileGradient)" stroke-width="2" fill="none" opacity="0.5" stroke-dasharray="3,3"/>
  <path d="M130 170 Q145 150 160 170" stroke="#a4c639" stroke-width="2" fill="none" opacity="0.5" stroke-dasharray="3,3"/>
</svg>
